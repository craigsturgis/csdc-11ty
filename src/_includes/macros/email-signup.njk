{% macro emailSignup(labelText = "Subscribe to get updates when I write something new") %}
    <div class="mt-8 max-w-md mx-auto">
        <form
            action="https://buttondown.com/api/emails/embed-subscribe/craigsturgis"
            method="post"
            target="popupwindow"
            onsubmit="window.open('https://buttondown.com/craigsturgis', 'popupwindow')"
            class="embeddable-buttondown-form p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md space-y-4 border dark:border-gray-700"
        >
            <div class="flex flex-col space-y-2">
                <label for="bd-email" class="text-lg text-center">{{ labelText }}</label>
                <input 
                    type="email" 
                    name="email" 
                    id="bd-email"
                    class="px-4 py-2 border rounded-md dark:bg-gray-900 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    placeholder="Enter your email"
/>
            </div>

            <div class="flex justify-center">
                <input 
                    type="submit" 
                    value="Subscribe" 
                    class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600 cursor-pointer transition-colors"
/>
            </div>

            <p class="text-sm text-gray-600 dark:text-gray-400 text-center">
                <a 
                    href="https://buttondown.com/refer/craigsturgis" 
                    target="_blank"
                    class="hover:underline"
                >
                    Powered by Buttondown.
                </a>
            </p>
        </form>
    </div>
{% endmacro %}