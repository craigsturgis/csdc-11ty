{% macro experienceItem(image, alt, company, role, period, description) %}
    <div class="flex flex-col">
        <div class="w-fit mx-auto bg-white dark:bg-gray-50 border border-gray-200 dark:border-gray-700 rounded-xl dark:rounded-3xl p-6 mb-6 shadow-sm">
            <img src="{{ image }}" alt="{{ alt }}" class="w-32 h-32 md:w-40 md:h-40 object-contain">
        </div>
        <div class="mb-4 text-center">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-2">{{ company }}</h3>
            <div class="inline-flex justify-center items-center mx-auto">
                <span class="text-lg text-gray-600 dark:text-gray-300">{{ role }}</span>
                <span class="text-lg text-gray-600 dark:text-gray-300 px-2">&middot;</span>
                <span class="text-lg text-gray-600 dark:text-gray-300">{{ period }}</span>
            </div>
        </div>
        <p>{{ description }}</p>
    </div>
{% endmacro %}