{% macro experienceItem(image, alt, company, role, period, description, link) %}
    <div class="flex flex-col">
        <div class="w-fit mx-auto bg-white dark:bg-gray-50 border border-gray-200 dark:border-gray-700 rounded-xl dark:rounded-3xl p-6 mb-4 shadow-sm">
            {% if link %}
                <a href="{{ link }}" target="_blank" rel="noopener noreferrer">
                    <img src="{{ image }}" alt="{{ alt }}" class="w-32 h-32 md:w-40 md:h-40 object-contain">
                </a>
            {% else %}
                <img src="{{ image }}" alt="{{ alt }}" class="w-32 h-32 md:w-40 md:h-40 object-contain">
            {% endif %}
        </div>
        <div class="mb-4 text-center">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-2">
                {% if link %}
                    <a href="{{ link }}" target="_blank" rel="noopener noreferrer">{{ company }}</a>
                {% else %}
                    {{ company }}
                {% endif %}
            </h3>
            <div class="flex flex-col gap-1">
                <span class="text-lg text-gray-600 dark:text-gray-300">{{ role }}</span>
                <span class="text-lg text-gray-600 dark:text-gray-300">{{ period }}</span>
            </div>
        </div>
        <p>{{ description }}</p>
    </div>
{% endmacro %}