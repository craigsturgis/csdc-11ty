---
layout: base.njk
title: Archive
permalink: /archive/
---

<div class="prose dark:prose-invert lg:prose-xl mx-auto">
    <h1>Archive</h1>

    {% set postslist = collections.archive %}
    {% if postslist.length %}
        <div class="space-y-4 mt-4">
            {%- for post in postslist | reverse -%}
                <div class="group">
                    <a href="{{ post.url }}" class="no-underline">
                        <h3 class="mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400">{{ post.data.title }}</h3>
                        {% if post.data.description %}
                            <p class="text-gray-600 dark:text-gray-400 mt-1">{{ post.data.description }}</p>
                        {% endif %}
                        <span class="text-sm text-gray-500">
                            {{ post.date | dateFilter }}
                        </span>
                    </a>
                </div>
            {%- endfor -%}
        </div>
    {% else %}
        <p>No posts yet.</p>
    {% endif %}
</div>