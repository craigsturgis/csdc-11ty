        {% from "macros/post-card.njk" import postCard %}
        {% set featured = collections.posts | filterBy('data.featuredpost', true) %}
        {% if featured.length %}
            <div class="space-y-8 mt-4">
                {%- for post in featured | reverse -%}
                    {{ postCard(post) }}
                {%- endfor -%}
            </div>
            <p class="mt-6">
                <a href="/posts/" class="text-blue-600 dark:text-blue-400 hover:underline">View all posts â†’</a>
            </p>
        {% else %}
            <p>No featured posts yet.</p>
        {% endif %}
