<div class="prose dark:prose-invert lg:prose-xl mx-auto">
    <div class="flex flex-col md:flex-row md:items-center md:justify-center md:gap-8 mb-8">
        <img 
            src="/img/Craig-Sturgis-headshot-2019.jpg" 
            alt="Craig Sturgis headshot" 
            class="w-48 h-48 rounded-full object-cover mx-auto md:mx-0"
        >
        <h1 class="text-4xl text-center md:text-left">Hi, I'm Craig.</h1>
    </div>

    <section class="my-8 space-y-8 max-w-2xl mx-auto">
        <p class="text-xl">I am a curious human with a winding journey of a <a href="#previous-experience" class="text-blue-600 dark:text-blue-400 hover:underline">tech career</a> and a family I do my best to put first.</p>

        <p class="text-xl">I run a tech professional services company called <a class="text-blue-600 dark:text-blue-400 hover:underline" href="https://prodyssey.com">Prodyssey</a> as my main professional focus.</p>

        <p class="text-xl">I like to occasionally <a href="#featured-posts" class="text-blue-600 dark:text-blue-400 hover:underline">write</a> about what I'm learning and share it here.</p>
    </section>

    <section class="my-8" id="featured-posts">
        <h2 class="text-2xl mb-4">Featured Writing</h2>
        {% set featured = collections.posts | filterBy('data.featuredpost', true) %}
        {% if featured.length %}
            <div class="space-y-8 mt-4">
                {%- for post in featured | reverse -%}
                    <article class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden max-w-3xl mx-auto">
                        {% if post.data.featuredimage %}
                            <div class="relative h-48 sm:h-64 md:h-72 lg:h-96">
                                <img 
                                    src="{{ post.data.featuredimage }}" 
                                    alt="{{ post.data.imageAlt or post.data.title }}"
                                    class="absolute inset-0 w-full h-full object-cover"
                                    loading="lazy"
                                    sizes="(max-width: 768px) 100vw, 768px"
                                    srcset="{{ post.data.featuredimage }}?width=400 400w,
                                            {{ post.data.featuredimage }}?width=800 800w,
                                            {{ post.data.featuredimage }}?width=1200 1200w"
                                >
                            </div>
                        {% endif %}
                        <div class="p-4 sm:p-6 md:p-8">
                            <h3 class="text-xl sm:text-2xl font-semibold mb-2">
                                <a href="{{ post.url }}" class="hover:text-blue-600 dark:hover:text-blue-400">
                                    {{ post.data.title }}
                                </a>
                            </h3>
                            <time class="text-sm text-gray-500 dark:text-gray-400 block mb-3">
                                {{ post.date | dateFilter }}
                            </time>
                            {% if post.data.description %}
                                <p class="text-gray-600 dark:text-gray-300 mb-4">
                                    {{ post.data.description }}
                                </p>
                            {% endif %}
                            <a href="{{ post.url }}" class="text-blue-600 dark:text-blue-400 hover:underline">
                                Read more →
                            </a>
                        </div>
                    </article>
                {%- endfor -%}
            </div>
            <p class="mt-6">
                <a href="/posts/" class="text-blue-600 dark:text-blue-400 hover:underline">View all posts →</a>
            </p>
        {% else %}
            <p>No featured posts yet.</p>
        {% endif %}
    </section>

