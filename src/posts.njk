<div class="prose dark:prose-invert lg:prose-xl mx-auto">
    <h1>Posts</h1>

    {% from "macros/post-card.njk" import postCard %}

    {% if collections.posts %}
        <div class="space-y-8 mt-4">
            {%- for post in collections.posts | reverse -%}
                {{ postCard(post) }}
            {%- endfor -%}
        </div>
    {% else %}
        <p>No posts yet.</p>
    {% endif %}

    <div class="mt-8 text-center">
        <a href="/archive/" class="text-blue-600 dark:text-blue-400 hover:underline">View Complete Archive â†’</a>
    </div>
</div>